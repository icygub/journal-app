<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cs260.journalapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/NewEntry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="106dp"
        android:onClick="CreateNewEntryClicked"
        android:text="New Entry"
        app:layout_constraintBottom_toTopOf="@+id/SearchEntry_btn"
        app:layout_constraintStart_toStartOf="@+id/SearchEntry_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchEntry_btn"
        android:layout_width="106dp"
        android:layout_height="0dp"
        android:layout_marginBottom="285dp"
        android:onClick="SearchEntryClicked"
        android:text="Search Entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewEntry_btn" />
</android.support.constraint.ConstraintLayout>
