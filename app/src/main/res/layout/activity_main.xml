<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.cs260.journalapplication.MainActivity">

    <Button
        android:id="@+id/NewEntry_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="357dp"
        android:layout_marginEnd="148dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="106dp"
        android:onClick="CreateNewEntryClicked"
        android:text="New Entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SearchEntry_btn"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:layout_marginBottom="288dp"
        android:layout_marginEnd="136dp"
        android:layout_marginStart="142dp"
        android:layout_marginTop="19dp"
        android:text="Search Entry"
        android:onClick="SearchEntryClicked"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewEntry_btn" />
</android.support.constraint.ConstraintLayout>
